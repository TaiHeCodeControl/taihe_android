<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="main_tab">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">12sp</item>
        <item name="android:layout_weight">1.0</item>
        <item name="android:button">@null</item>
        <item name="android:drawablePadding">2dp</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@drawable/tab_color_select</item>
    </style>

    <style name="index_tab">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1.0</item>
        <item name="android:drawablePadding">5dp</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textSize">@dimen/font_size_14</item>
        <item name="android:textColor">@color/index_tab_color</item>
    </style>

    <style name="text_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1.0</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/font_size_16</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="CustomProgressDialog" parent="@style/CommonDialog">
        <item name="android:windowBackground">@drawable/xiaoyao_dialog</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <!-- dialog -->
    <style name="CommonDialog" parent="@android:style/Theme.Dialog">

        <!-- <item name="android:windowBackground">@drawable/smssdk_dialog_bg</item> -->
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="MediaController_SeekBar" parent="android:Widget.SeekBar">
        <item name="android:progressDrawable">@drawable/scrubber_progress_horizontal_holo_dark
        </item>
        <item name="android:indeterminateDrawable">
            @drawable/scrubber_progress_horizontal_holo_dark
        </item>
        <item name="android:minHeight">13dip</item>
        <item name="android:maxHeight">13dip</item>
        <item name="android:thumb">@drawable/scrubber_control_selector_holo</item>
        <item name="android:thumbOffset">16dip</item>
        <item name="android:paddingLeft">16dip</item>
        <item name="android:paddingRight">16dip</item>
    </style>

    <style name="MediaController_Text">
        <item name="android:textColor">#ffffffff</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!--职位列表中CheckBox的样式-->
    <style name="CustomCheckboxRed" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:button">@drawable/checkbox_red</item>
    </style>

    <!--申请职位对话框中CheckBox的样式-->
    <style name="CustomCheckboxBlue" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:button">@drawable/checkbox_blue</item>
    </style>

    <style name="CustomCheckBox" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:button">@drawable/radio_check</item>
    </style>

    <style name="ResumeTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:textSize">@dimen/font_size_15</item>
        <item name="android:textColor">@color/font_color_black</item>
    </style>

    <style name="ResumeTextStyle_left">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/font_size_15</item>
        <item name="android:textColor">@color/font_color_gray</item>
    </style>

    <style name="CustomRadioButton">
        <item name="android:button">@drawable/radio_check</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:padding">5dp</item>
    </style>

    <style name="WriteResumeTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">15dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">@dimen/font_size_15</item>
        <item name="android:textColor">@color/font_color_black</item>
        <item name="android:textColorHint">@color/hint_color</item>
        <item name="android:background">@null</item>
        <item name="android:drawableRight">@drawable/xiala</item>
    </style>

    <!--职位筛选界面文字属性-->
    <style name="font_job_filter_black">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <!--职位筛选界面文字属性-->
    <style name="font_job_filter_gray">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#646464</item>
    </style>

    <!--职位筛选界面相对布局属性-->
    <style name="rl_job_filter">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">42dp</item>
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:layout_marginRight">15dp</item>
    </style>


    <!--line_fill-->
    <style name="line_fill">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.5dp</item>
        <item name="android:background">@color/line_gray</item>
    </style>

    <!--line_marginLeft-->
    <style name="line_marginLeft">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.5dp</item>
        <item name="android:background">@color/line_gray</item>
        <item name="android:layout_marginLeft">15dp</item>
    </style>


    <!--圆角dialog样式-->
    <style name="mydialog_style" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.6</item>

    </style>
</resources>
