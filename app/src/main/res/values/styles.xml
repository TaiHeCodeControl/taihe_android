<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="main_tab">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:textSize">12dp</item>
        <item name="android:layout_weight">1.0</item>
        <item name="android:button">@null</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@drawable/tab_color_select</item>
    </style>

    <style name="CustomProgressDialog" parent="@style/CommonDialog">
        <item name="android:windowBackground">@drawable/xiaoyao_dialog</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <!-- dialog -->
    <style name="CommonDialog" parent="@android:style/Theme.Dialog">

        <!-- <item name="android:windowBackground">@drawable/smssdk_dialog_bg</item> -->
        <item name="android:windowNoTitle">true</item>
    </style>

</resources>
