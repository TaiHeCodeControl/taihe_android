<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_gray"
    android:orientation="vertical">

    <include layout="@layout/include_title_bar" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <com.handmark.pulltorefresh.library.PullToRefreshGridView
        xmlns:ptr="http://schemas.android.com/apk/res-auto"
        android:id="@+id/id_company_job_all"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:divider="@color/gray"
        android:fadingEdge="none"
        android:fastScrollEnabled="false"
        android:footerDividersEnabled="false"
        android:headerDividersEnabled="true"
        android:listSelector="@color/white"
        android:numColumns="1"
        android:smoothScrollbar="true"
        ptr:ptrAnimationStyle="flip" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_alignParentBottom="true"
            android:background="@color/white"
            android:paddingBottom="20dp"
            android:paddingTop="20dp">

            <CheckBox
                android:id="@+id/cb_findjob_selectall"
                style="@style/CustomCheckboxBlue"
                android:layout_width="60dp"
                android:layout_height="48dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:text="  全选"
                android:textColor="@color/font_color_gray"
                android:textSize="@dimen/font_size_26" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingRight="10dp"
                android:paddingLeft="10dp"
                android:layout_toRightOf="@+id/cb_findjob_selectall"
                android:gravity="center_vertical"
                android:background="@color/white">

                <Button
                    android:id="@+id/btn_alljob_shenqing"
                    android:layout_width="80dp"
                    android:layout_height="40dp"
                    android:layout_alignParentLeft="true"
                    android:background="@drawable/next_step_background"
                    android:text="停止招聘"
                    android:textColor="@color/white"
                    android:textSize="@dimen/font_size_26" />

                <Button
                    android:id="@+id/btn_alljob"
                    android:layout_width="80dp"
                    android:layout_height="40dp"
                    android:layout_centerInParent="true"
                    android:background="@drawable/next_step_background"
                    android:text="刷新职位"
                    android:textColor="@color/white"
                    android:textSize="@dimen/font_size_26" />

                <Button
                    android:id="@+id/btn_all"
                    android:layout_width="80dp"
                    android:layout_height="40dp"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/delet_background"
                    android:text="删除"
                    android:textColor="@color/white"
                    android:textSize="@dimen/font_size_26"/>

                </RelativeLayout>

        </RelativeLayout>

    </RelativeLayout>

</LinearLayout>