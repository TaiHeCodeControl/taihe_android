<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_gray"
    android:orientation="vertical">

    <include
        android:id="@+id/findpass_title"
        layout="@layout/include_title_bar" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/line_gray"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <TextView
            android:id="@+id/id_resume_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="个人简历-专业技能"
            android:textSize="15sp"
            android:textColor="@color/black"
            android:layout_centerVertical="true" />

        <TextView
            android:id="@+id/id_create_resume"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="8dp"
            android:text="可选项"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:background="@drawable/next_step_background"
            android:layout_centerInParent="true"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/line_gray"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingLeft="15dp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="left|center"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/font_color_black"
                android:text="技能名称"
                android:textSize="15sp"/>
            <View
                android:layout_width="0.5dp"
                android:layout_height="20dp"
                android:layout_marginLeft="10dp"
                android:background="@color/line_gray"/>

            <EditText
                android:id="@+id/id_tech_name"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:hint="请填写培训中心"
                android:layout_marginRight="13dp"
                android:textColor="@color/font_color_black"
                android:textColorHint="@color/hint_color"
                android:textSize="15sp"
                android:layout_weight="1"
                android:background="@null" />

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/line_gray"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="left|center"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/font_color_black"
                android:text="技能类别"
                android:textSize="15sp"/>
            <View
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:background="@color/line_gray"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:layout_marginLeft="10dp" />

            <EditText
                android:id="@+id/id_tech_type"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="15dp"
                android:hint="请选择技能类别"
                android:textColor="@color/font_color_black"
                android:textColorHint="@color/hint_color"
                android:textSize="15sp"
                android:background="@null"
                android:drawableRight="@drawable/xiala"/>

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/line_gray"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="left|center"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/font_color_black"
                android:textSize="15sp"
                android:text="熟练程度" />
            <View
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:background="@color/line_gray"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:layout_marginLeft="10dp" />

            <EditText
                android:id="@+id/id_tech_level"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="15dp"
                android:hint="请选择熟练程度"
                android:textColor="@color/font_color_black"
                android:textColorHint="@color/hint_color"
                android:textSize="15sp"
                android:layout_weight="1"
                android:background="@null"
                android:drawableRight="@drawable/xiala"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/line_gray"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="left|center"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/font_color_black"
                android:textSize="15sp"
                android:text="掌握时间" />
            <View
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:background="@color/line_gray"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:layout_marginLeft="10dp" />

            <EditText
                android:id="@+id/id_year"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="15dp"
                android:hint="请填写掌握时间"
                android:textColor="@color/font_color_black"
                android:textColorHint="@color/hint_color"
                android:textSize="15sp"
                android:background="@null"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:text="年"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/line_gray"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/id_commit"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:gravity="center"
            android:text="保存"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:background="@drawable/delet_background"/>

        <View
            android:layout_width="20dp"
            android:layout_height="1dp"/>

        <TextView
            android:id="@+id/id_reset"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:gravity="center"
            android:text="重置"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:background="@drawable/next_step_background"/>
    </LinearLayout>

</LinearLayout>