<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left|center"
            android:paddingLeft="15dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/id_time_train"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="时间段"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/id_train_direction"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="培训方向"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/id_train_company"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="培训机构"
                android:textColor="@color/black"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="培训描述:"
                android:textColor="@color/font_color_gray"/>

            <TextView
                android:id="@+id/id_train_brief"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text=""
                android:textColor="@color/black"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/id_edit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@+id/id_delite"
                    android:layout_marginRight="15dp"
                    android:text="编辑"
                    android:textSize="16sp"
                    android:textColor="@color/include_title_color"
                    android:drawableLeft="@drawable/edit_icon_green"
                    android:drawablePadding="5dp"/>

                <TextView
                    android:id="@+id/id_delite"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="15dp"
                    android:text="删除"
                    android:textSize="16sp"
                    android:textColor="@color/origin"
                    android:drawableLeft="@drawable/delete_icon"
                    android:drawablePadding="5dp"/>
            </RelativeLayout>

        </LinearLayout>
    </LinearLayout>