<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/title_height"
    android:background="@color/include_title_color">

    <LinearLayout
        android:id="@+id/lin_back"
        android:orientation="horizontal"
        android:layout_width="60dp"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:gravity="left|center">
        <ImageView
            android:id="@+id/id_back"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:scaleType="fitStart"
            android:src="@drawable/top_return_icon"/>
    </LinearLayout>

    <TextView
        android:id="@+id/id_title"
        android:text="标题"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:textSize="18sp"
        android:textColor="@color/white"/>

    <TextView
        android:id="@+id/id_commit"
        android:layout_width="50dp"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="15dp"
        android:gravity="center"
        android:text="保存"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:visibility="gone"/>

    <ImageView
        android:id="@+id/id_other"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="15dp"
        android:scaleType="fitEnd"
        android:src="@drawable/shoucang"
        android:visibility="gone"/>
    <ImageView
        android:id="@+id/id_share"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="15dp"
        android:scaleType="fitEnd"
        android:src="@drawable/scshare"
        android:visibility="gone"/>
</RelativeLayout>
