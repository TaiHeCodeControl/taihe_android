<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="85dp"
    android:background="@color/white"
    android:orientation="horizontal">

    <RelativeLayout
        android:id="@+id/id_item_discuss"
        android:layout_width="match_parent"
        android:layout_height="85dp"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/id_company_logo"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="12dp"
            android:layout_centerVertical="true"
            android:src="@drawable/logo_icon"/>

        <ImageView
            android:id="@+id/id_notification"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="3dp"
            android:layout_marginRight="6dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/notification_no"/>

        <RelativeLayout
            android:id="@+id/id_discuss_ans"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/id_company_logo"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="3dp">

            <TextView
                android:id="@+id/id_position_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="市场策划"
                android:textColor="@color/black"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/id_invited_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:text="今天"
                android:textSize="15sp"
                android:textColor="@color/font_hui_se"/>

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/id_com_notifi"
            android:layout_below="@+id/id_discuss_ans"
            android:layout_toRightOf="@+id/id_company_logo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/id_addres"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="北京"
                android:textSize="16sp"
                android:textColor="@color/font_color_gray"/>

            <View
                android:layout_width="0.5dp"
                android:layout_height="12dp"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="6dp"
                android:layout_gravity="center_vertical"
                android:background="@color/line_gray"/>

            <TextView
                android:id="@+id/id_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="科技"
                android:textSize="16sp"
                android:textColor="@color/font_color_gray"/>
            </LinearLayout>

        <TextView
            android:id="@+id/id_salary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/id_com_notifi"
            android:layout_toRightOf="@+id/id_company_logo"
            android:layout_marginTop="3dp"
            android:text="8K-12K"
            android:textSize="16sp"
            android:textColor="@color/font_color_gray"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_alignParentBottom="true"
            android:background="@color/line_gray"/>

    </RelativeLayout>

</LinearLayout>