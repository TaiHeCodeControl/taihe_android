<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include layout="@layout/include_title_bar" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/line_gray" />


    <RelativeLayout
        android:paddingTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_jobsearch_city"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:text="北京"
            android:textSize="@dimen/font_size_32"
            android:textColor="@color/font_color_black"/>

        <ImageButton
            android:id="@+id/ib_jobsearch_cityselect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@drawable/jiantou"
            android:layout_alignTop="@+id/tv_jobsearch_city"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/tv_jobsearch_city"
            android:layout_toEndOf="@+id/tv_jobsearch_city" />

        <EditText
            android:id="@+id/et_jobsearch_position"
            android:layout_toRightOf="@+id/ib_jobsearch_cityselect"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="数据分析经理"
            android:textSize="12dp"
            android:textColor="#C8C8C8"
            android:layout_marginLeft="10dp"
            android:paddingLeft="10dp"
            android:background="@drawable/soushuokuang"/>

        <Button
            android:id="@+id/btn_jobsearch_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dp"
            android:background="@null"
            android:layout_toRightOf="@+id/et_jobsearch_position"
            android:text="搜索职位"
            android:textSize="@dimen/font_size_32"
            android:textColor="@color/font_color_red"/>
    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12dp"
        android:text="热门搜索"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="15dp"
        android:textColor="@color/font_color_gray_jobsearch"/>

    <GridView
        android:layout_marginTop="10dp"
        android:layout_marginLeft="15dp"
        android:id="@+id/gv_jobsearch_hotjob"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:numColumns="4"
        android:listSelector="@null"
        android:horizontalSpacing="4dp"
        android:verticalSpacing="10dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12dp"
        android:text="搜索历史"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="15dp"
        android:textColor="@color/font_color_gray_jobsearch"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:background="@color/line_gray" />

    <ListView
        android:id="@+id/lv_jobsearch_searchhistory"
        android:divider="@color/line_gray"
        android:footerDividersEnabled="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>