<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_gray"
    android:orientation="vertical">

    <include
        android:id="@+id/login_title"
        layout="@layout/include_title_bar" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/line_gray" />

    <ImageView
        android:id="@+id/iv_login_icon"
        android:layout_width="match_parent"
        android:scaleType="center"
        android:layout_height="110dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/logo" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="一个具有圈子的就业规划平台"
        android:visibility="gone"
        android:gravity="center"
        android:textColor="#717171"
        android:id="@+id/textView" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="19dp"
        android:layout_marginBottom="15dp"
        android:visibility="gone"
        android:gravity="center">

        <TextView
            android:id="@+id/log_txt_user_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingLeft="40dp"
            android:paddingRight="40dp"
            android:background="@drawable/border_bg_white"
            android:text="个人用户"
            android:textSize="15sp"
            android:textColor="@color/font_color_red" />

        <TextView
            android:id="@+id/log_txt_com_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="企业用户"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingLeft="40dp"
            android:paddingRight="40dp"
            android:textSize="15sp"
            android:background="@drawable/border_bg_gray"
            android:textColor="@color/font_color_black" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/line_gray" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_login_icon"
        android:background="@color/white"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="45dp">

            <TextView
                android:id="@+id/txt_login_user_tag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:text="手机号"
                android:textColor="@color/font_color_black"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/et_login_userphone"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="75dp"
                android:background="@null"
                android:focusable="true"
                android:inputType="phone"
                android:lines="11"
                android:hint="请输入手机号"
                android:textColor="@color/font_color_black"
                android:textColorHint="#C8C8C8"
                android:textSize="@dimen/font_size_26" />


        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="15dp"
            android:background="@color/line_gray" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="45dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:text="密码"
                android:textColor="@color/font_color_black"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/et_login_password"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="75dp"
                android:background="@null"
                android:hint="请输入密码"
                android:inputType="textPassword"
                android:textColor="@color/font_color_black"
                android:textColorHint="#C8C8C8"
                android:textSize="@dimen/font_size_26" />


        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/line_gray" />

</LinearLayout>

        <Button
            android:id="@+id/btn_login_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="15dp"
            android:background="@drawable/hongniu"
            android:onClick="login"
            android:text="登录"
            android:textSize="15sp"
            android:textColor="@color/white" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            >

            <TextView
                android:id="@+id/tv_login_forgetpassword"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:text="忘记密码？"
                android:textSize="13sp"
                android:gravity="center"
                android:textColor="@color/font_color_red"/>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_alignParentTop="true"
                android:layout_toStartOf="@+id/tv_login_forgetpassword">

                <LinearLayout
                    android:id="@+id/log_lin_user_tag"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="fill_parent">

                    <TextView
                        android:id="@+id/tv_login_re"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="还没有账号？"
                        android:textSize="13sp"
                        android:gravity="center"
                        android:textColor="@color/font_color_black"/>

                    <TextView
                        android:id="@+id/tv_login_regist"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="立即注册!"
                        android:textSize="13sp"
                        android:gravity="center"
                        android:textColor="@color/font_color_red"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/log_lin_com_tag"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="fill_parent"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/tv_login_com_tag"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="访问eggker.cn注册企业账号"
                        android:textSize="13sp"
                        android:gravity="center"
                        android:textColor="@color/font_color_black"/>

                </LinearLayout>
            </LinearLayout>


        </RelativeLayout>

    </LinearLayout>


