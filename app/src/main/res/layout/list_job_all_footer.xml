<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:paddingBottom="20dp"
    android:paddingTop="20dp">
    <ProgressBar
        android:layout_marginRight="20dp"
        android:layout_toLeftOf="@+id/tv_alljob_footer_txt"
        android:id="@+id/pb_alljob_footer_loading"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_gravity="center"
        android:indeterminateDrawable="@anim/update_loading_progressbar_anim"
        android:visibility="visible" />

    <TextView
        android:id="@+id/tv_alljob_footer_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="加载更多"
        android:textColor="@color/font_color_gray"
        android:textSize="@dimen/font_size_26" />


</RelativeLayout>