<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="horizontal">

    <RelativeLayout
        android:id="@+id/id_item_discuss"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/id_notification"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="6dp"
            android:layout_marginRight="6dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/notification_no"/>

        <RelativeLayout
            android:id="@+id/id_discuss_ans"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <TextView
                android:id="@+id/id_discuss_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="赵四回复了你"
                android:textColor="@color/black"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/id_discuss_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:text="今天"
                android:textSize="15sp"
                android:textColor="@color/font_hui_se"/>

            </RelativeLayout>

    <RelativeLayout
        android:id="@+id/id_dis_ans"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/id_discuss_ans"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp">

        <TextView
            android:id="@+id/id_discuss_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="70dp"
            android:layout_marginBottom="3dp"
            android:text="拉到了面对老师了了深刻的"
            android:textSize="16sp"
            android:textColor="@color/font_color_gray"
            android:ellipsize="end"
            android:visibility="visible"/>

        <TextView
            android:id="@+id/id_show"
            android:layout_width="45dp"
            android:layout_height="23dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="8dp"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:text="展开"
            android:textSize="16sp"
            android:textColor="@color/green_msg_color"
            android:background="@drawable/see_all_updown"/>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_alignParentBottom="true"
            android:background="@color/line_gray"/>

        </RelativeLayout>

</LinearLayout>