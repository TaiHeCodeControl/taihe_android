<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:background="@color/white"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/id_notification"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"
        android:layout_gravity="center_vertical"
        android:src="@drawable/notification_no"/>

    <RelativeLayout
        android:id="@+id/id_item_discuss"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:gravity="center_vertical">

        <RelativeLayout
            android:id="@+id/id_discuss_ans"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="8dp">

            <TextView
                android:id="@+id/id_discuss_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="赵四回复了你"
                android:textColor="@color/black"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/id_discuss_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:text="今天"
                android:textSize="15sp"
                android:textColor="@color/font_hui_se"/>
            </RelativeLayout>

        <TextView
            android:id="@+id/id_discuss_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/id_discuss_ans"
            android:text="拉到了面对老师了了深刻的"
            android:textSize="16sp"
            android:textColor="@color/font_color_gray"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_alignParentBottom="true"
            android:background="@color/line_gray"/>

        </RelativeLayout>

</LinearLayout>