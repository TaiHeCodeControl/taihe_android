<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_gray"
    android:orientation="vertical">

    <include layout="@layout/include_title_bar" />

    <View style="@style/line_fill" />

    <ScrollView
        android:id="@+id/sv_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical"
                android:padding="15dp">

                <TextView
                    android:id="@+id/id_job_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="数据分析负责人"
                    android:textColor="@color/font_color_black"
                    android:textSize="@dimen/font_size_32" />

                <TextView
                    android:id="@+id/id_job_company"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="苏宁消费金融公司"
                    android:textColor="@color/font_color_gray"
                    android:textSize="@dimen/font_size_26" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="发布:"
                        android:textColor="@color/font_color_gray"
                        android:textSize="@dimen/font_size_22" />

                    <TextView
                        android:id="@+id/id_start_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="2015-07-29"
                        android:textColor="@color/font_color_gray"
                        android:textSize="@dimen/font_size_22" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="有效:"
                        android:textColor="@color/font_color_gray"
                        android:textSize="@dimen/font_size_22" />

                    <TextView
                        android:id="@+id/id_end_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="2015-07-29"
                        android:textColor="@color/font_color_gray"
                        android:textSize="@dimen/font_size_22" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@color/white"
                android:orientation="horizontal"
                android:padding="15dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:text="工作性质:"
                            android:textColor="@color/font_color_gray"
                            android:textSize="@dimen/font_size_26" />

                        <TextView
                            android:id="@+id/id_job_type"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:text="全职"
                            android:textColor="@color/font_color_black"
                            android:textSize="@dimen/font_size_26" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:background="@color/white"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:text="学历要求:"
                            android:textColor="@color/font_color_gray"
                            android:textSize="@dimen/font_size_26" />

                        <TextView
                            android:id="@+id/id_school_leve"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:text="本科"
                            android:textColor="@color/font_color_black"
                            android:textSize="@dimen/font_size_26" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:background="@color/white"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:text="工作经验:"
                            android:textColor="@color/font_color_gray"
                            android:textSize="@dimen/font_size_26" />

                        <TextView
                            android:id="@+id/id_work_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:text="3年"
                            android:textColor="@color/font_color_black"
                            android:textSize="@dimen/font_size_26" />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:text="工作地点:"
                            android:textColor="@color/font_color_gray"
                            android:textSize="@dimen/font_size_26" />

                        <TextView
                            android:id="@+id/id_job_addres"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:text="北京"
                            android:textColor="@color/font_color_black"
                            android:textSize="@dimen/font_size_26" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:background="@color/white"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:text="月薪:"
                            android:textColor="@color/font_color_gray"
                            android:textSize="@dimen/font_size_26" />

                        <TextView
                            android:id="@+id/id_money"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:text="3000-4000"
                            android:textColor="@color/font_color_red"
                            android:textSize="@dimen/font_size_26" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:background="@color/white"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:text="招聘人数:"
                            android:textColor="@color/font_color_gray"
                            android:textSize="@dimen/font_size_26" />

                        <TextView
                            android:id="@+id/id_pepple_num"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:text="若干"
                            android:textColor="@color/font_color_black"
                            android:textSize="@dimen/font_size_26" />
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@color/white"
                android:orientation="vertical"
                android:padding="15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:drawableLeft="@drawable/left_icon"
                    android:drawablePadding="8dp"
                    android:gravity="center"
                    android:text="职位描述"
                    android:textColor="@color/font_color_gray"
                    android:textSize="@dimen/font_size_26" />

                <TextView
                    android:id="@+id/tv_jobdetail_description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:text="岗位职责"
                    android:ellipsize="end"
                    android:lineSpacingExtra="5dp"
                    android:lineSpacingMultiplier="1.0"
                    android:textColor="@color/font_color_black"
                    android:textSize="@dimen/font_size_26" />
                <TextView
                    android:id="@+id/id_see_allzhize"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/see_all_updown"
                    android:drawablePadding="8dp"
                    android:drawableRight="@drawable/down_detail_icon"
                    android:gravity="center"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:text="查看全部"
                    android:textColor="@color/font_color_red"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/id_see_shouqizhize"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/see_all_updown"
                    android:drawablePadding="8dp"
                    android:drawableRight="@drawable/shouqi"
                    android:gravity="center"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:text="点击收起"
                    android:textColor="@color/font_color_red"
                    android:textSize="14sp"
                    android:visibility="gone" />

                <com.taihe.eggshell.widget.MyListView
                    android:id="@+id/id_job_desc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:divider="@null"
                    android:listSelector="@color/white"
                    android:scrollbars="none"
                    android:visibility="gone"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:background="@color/white"
                android:orientation="vertical"
                android:padding="15dp">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:drawableLeft="@drawable/left_icon"
                    android:drawablePadding="8dp"
                    android:gravity="center"
                    android:text="公司地址"
                    android:textColor="@color/font_color_gray"
                    android:textSize="@dimen/font_size_26" />

                <TextView
                    android:id="@+id/tv_jobdetail_company_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:text="公司地址"
                    android:textColor="@color/font_color_black"
                    android:textSize="@dimen/font_size_26" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@color/white"
                android:orientation="vertical"
                android:padding="15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:drawableLeft="@drawable/left_icon"
                    android:drawablePadding="8dp"
                    android:gravity="center"
                    android:text="公司介绍"
                    android:textColor="@color/font_color_gray"
                    android:textSize="@dimen/font_size_26" />

                <TextView
                    android:id="@+id/id_company_jieshao"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:ellipsize="end"
                    android:lineSpacingExtra="5dp"
                    android:lineSpacingMultiplier="1.0"
                    android:text="深刻的历史的"
                    android:textColor="@color/font_color_black"
                    android:textSize="@dimen/font_size_26" />

                <TextView
                    android:id="@+id/id_see_all"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/see_all_updown"
                    android:drawablePadding="8dp"
                    android:drawableRight="@drawable/down_detail_icon"
                    android:gravity="center"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:text="查看全部"
                    android:textColor="@color/font_color_red"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/id_see_shouqi"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/see_all_updown"
                    android:drawablePadding="8dp"
                    android:drawableRight="@drawable/shouqi"
                    android:gravity="center"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:text="点击收起"
                    android:textColor="@color/font_color_red"
                    android:textSize="14sp"
                    android:visibility="gone" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_jobdetail_moreposition"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:background="@color/white"
                android:orientation="vertical"
                android:paddingTop="15dp"
                android:paddingLeft="15dp">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:drawableLeft="@drawable/left_icon"
                    android:drawablePadding="8dp"
                    android:gravity="center"
                    android:text="该公司更多职位"
                    android:textColor="@color/font_color_gray"
                    android:textSize="@dimen/font_size_26" />

                <View
                    android:layout_marginTop="15dp"
                    style="@style/line_fill" />

            </LinearLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white">
                <com.taihe.eggshell.widget.MyListView
                    android:id="@+id/id_other_position"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:divider="@color/white"
                    android:dividerHeight="0dp"
                    android:listSelector="@color/white"
                    android:focusable="false"
                    android:scrollbars="none" />
            </RelativeLayout>


            <Button
                android:id="@+id/id_apply_button"
                android:layout_width="120dp"
                android:layout_height="36dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/apply_job"
                android:text="申请职位"
                android:textColor="@color/white"
                android:textSize="18sp" />
        </LinearLayout>

    </ScrollView>

</LinearLayout>