<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_gray"
    android:orientation="vertical">

    <include
        android:id="@+id/regist_title"
        layout="@layout/include_title_bar" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/line_gray" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/border_roundedcorners_gray">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:text="手机号"
            android:textColor="@color/font_color_black"
            android:textSize="15dp" />

        <View
            android:layout_width="1dp"
            android:layout_height="16dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="65dp"
            android:background="@color/line_gray" />

        <EditText
            android:id="@+id/et_regist_phone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="75dp"
            android:background="@null"
            android:focusable="true"
            android:hint="请输入手机号"
            android:inputType="phone"
            android:maxLength="11"
            android:textColor="@color/font_color_black"
            android:textColorHint="#C8C8C8"
            android:textSize="@dimen/font_size_26" />


    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/border_roundedcorners_gray">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:text="密码"
            android:textColor="@color/font_color_black"
            android:textSize="15dp" />

        <View
            android:layout_width="1dp"
            android:layout_height="16dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="65dp"
            android:background="@color/line_gray" />

        <EditText
            android:id="@+id/et_regist_pwd"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="75dp"
            android:background="@null"
            android:hint="请输入密码"
            android:inputType="textPassword"
            android:textColor="@color/font_color_black"
            android:textColorHint="#C8C8C8"
            android:textSize="@dimen/font_size_26" />


    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="10dp"
            android:layout_weight="2"
            android:background="@drawable/border_roundedcorners_gray">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:text="验证码"
                android:textColor="@color/font_color_black"
                android:textSize="15dp" />

            <View
                android:layout_width="1dp"
                android:layout_height="16dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="65dp"
                android:background="@color/line_gray" />

            <EditText
                android:id="@+id/et_regist_code"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="75dp"
                android:background="@null"
                android:hint="请输入验证码"
                android:inputType="textPassword"
                android:textColor="@color/font_color_black"
                android:textColorHint="#C8C8C8"
                android:textSize="@dimen/font_size_26" />


        </RelativeLayout>


        <TextView
            android:id="@+id/tv_regist_getcode"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:background="@drawable/lvs"
            android:gravity="center"
            android:text="获取验证码"
            android:textColor="@color/white"
            android:layout_marginRight="15dp"
            android:textSize="15dp" />


    </LinearLayout>

    <Button
        android:id="@+id/btn_regist_register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/lane"
        android:textSize="18dp"
        android:textColor="@color/white"
        android:text="注册" />


</LinearLayout>