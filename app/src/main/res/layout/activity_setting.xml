<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:slideswitch="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.taihe.eggshell.main.SettingActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_gray"
    android:orientation="vertical">

    <include layout="@layout/include_title_bar"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/line_gray" />

    <RelativeLayout
        android:id="@+id/id_new_news"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/ucenter_selected_background">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:text="新消息通知"
            android:textColor="@color/font_color_black"
            android:textSize="@dimen/font_size_26" />

        <com.taihe.eggshell.widget.SlideSwitch
            android:id="@+id/id_is_open"
            android:layout_width="10dip"
            android:layout_height="32dip"
            android:layout_marginTop="10dip"
            slideswitch:isOpen="true"
            slideswitch:shape="circle"
            slideswitch:themeColor="#ff73aa00"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"/>


    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:background="@color/background_gray" />

    <RelativeLayout
        android:id="@+id/rl_mine_about"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:background="@drawable/ucenter_selected_background">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="15dp"
        android:text="关于蛋壳儿"
        android:textColor="@color/font_color_black"
        android:textSize="@dimen/font_size_26" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="15dp"
        android:src="@drawable/chakanquanbu" />

    </RelativeLayout>

    <View style="@style/line_marginLeft" />

    <RelativeLayout
    android:id="@+id/rl_mine_hezuoqudao"
    android:layout_width="match_parent"
    android:layout_height="42dp"
    android:background="@drawable/ucenter_selected_background">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="15dp"
        android:text="合作渠道"
        android:textColor="@color/font_color_black"
        android:textSize="@dimen/font_size_26" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="15dp"
        android:src="@drawable/chakanquanbu" />

    </RelativeLayout>

    <View style="@style/line_marginLeft" />

    <RelativeLayout
    android:id="@+id/rl_mine_feedback"
    android:layout_width="match_parent"
    android:layout_height="42dp"
    android:background="@drawable/ucenter_selected_background">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="15dp"
        android:text="意见反馈"
        android:textColor="@color/font_color_black"
        android:textSize="@dimen/font_size_26" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="15dp"
        android:src="@drawable/chakanquanbu" />

    </RelativeLayout>

    <View style="@style/line_marginLeft" />

    <RelativeLayout
    android:id="@+id/rl_mine_checkupdate"
    android:layout_width="match_parent"
    android:layout_height="42dp"
    android:background="@drawable/ucenter_selected_background">


    <TextView
        android:id="@+id/tv_mine_update"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="15dp"
        android:text="检查更新"
        android:textColor="@color/font_color_black"
        android:textSize="@dimen/font_size_26" />

    <TextView
        android:id="@+id/tv_mine_version"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="25dp"
        android:text="V1.0"
        android:textColor="@color/font_color_gray"
        android:textSize="@dimen/font_size_26" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="15dp"
        android:src="@drawable/chakanquanbu" />

    </RelativeLayout>


    <View
    android:layout_width="match_parent"
    android:layout_height="0.5dp"
    android:background="@color/line_gray" />

    <View
    android:layout_width="match_parent"
    android:layout_height="20dp"
    android:background="@color/background_gray" />


    <RelativeLayout
    android:id="@+id/rl_mine_logout"
    android:layout_width="match_parent"
    android:layout_height="42dp"
    android:background="@drawable/ucenter_selected_background">

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_alignParentTop="true"
        android:background="@color/line_gray" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginLeft="15dp"
        android:text="退出登录"
        android:textColor="@color/font_color_black"
        android:textSize="@dimen/font_size_26" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_alignParentBottom="true"
        android:background="@color/line_gray" />

    </RelativeLayout>


</LinearLayout>