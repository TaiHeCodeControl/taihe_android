<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_gray"
    android:orientation="vertical">

    <include
        android:id="@+id/id_title_line"
        layout="@layout/include_title_bar" />

    <View
        android:id="@+id/id_line"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@+id/id_title_line"
        android:background="@color/line_gray" />

    <com.taihe.eggshell.widget.MyScrollView
        android:id="@+id/id_scroll_info"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="40dp"
        android:fillViewport="true"
        android:layout_below="@+id/id_line">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:focusableInTouchMode="true"
            android:focusable="true"
            android:orientation="vertical">
            <LinearLayout
                android:id="@+id/id_lin_info_logo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/id_info_logo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/tu"
                    android:scaleType="fitXY"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/line_gray" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="15dp"
                android:orientation="vertical"
                android:background="@color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@color/white">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="主办方:\u3000"
                        android:textSize="16sp"
                        android:textColor="@color/font_color_black"/>
                    <TextView
                        android:id="@+id/id_info_company"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:textSize="16sp"
                        android:textColor="@color/font_color_gray" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    android:background="@color/white">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="举办时间:"
                        android:textSize="16sp"
                        android:textColor="@color/font_color_black"/>
                    <TextView
                        android:id="@+id/id_info_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:textSize="16sp"
                        android:textColor="@color/font_color_gray"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    android:background="@color/white">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="举办会场:"
                        android:textSize="16sp"
                        android:textColor="@color/font_color_black"/>
                    <TextView
                        android:id="@+id/id_info_addre"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:textSize="16sp"
                        android:textColor="@color/font_color_gray"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    android:background="@color/white">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="咨询电话:"
                        android:textSize="16sp"
                        android:textColor="@color/font_color_black"/>
                    <TextView
                        android:id="@+id/id_info_phone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:textSize="16sp"
                        android:textColor="@color/font_color_gray" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    android:background="@color/white">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="联系人:\u3000"
                        android:textSize="16sp"
                        android:textColor="@color/font_color_black"/>
                    <TextView
                        android:id="@+id/id_person"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:textSize="16sp"
                        android:textColor="@color/font_color_gray" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    android:background="@color/white">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="交通路线:"
                        android:textSize="16sp"
                        android:textColor="@color/font_color_black"/>
                    <TextView
                        android:id="@+id/id_info_way"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:textSize="16sp"
                        android:textColor="@color/font_color_gray" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="5dp"
                    android:gravity="center|right">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/collection_icon"/>
                    <TextView
                        android:id="@+id/id_collect_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:textColor="@color/dark_gray"/>
                    <View
                        android:layout_width="0.5dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:background="@color/line_gray"/>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/join_icon"/>
                    <TextView
                        android:id="@+id/id_apply_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:textColor="@color/dark_gray"/>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/line_gray"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:background="@color/white"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:gravity="center"
                        android:text="活动介绍:"
                        android:textColor="@color/font_color_black"
                        android:textSize="16sp"/>

                    <WebView
                        android:id="@+id/id_company_brief"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:lineSpacingExtra="5dp"
                        android:lineSpacingMultiplier="1.0"
                        android:textColor="@color/font_color_gray"
                        android:textSize="16sp" />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <com.taihe.eggshell.widget.MyListView
                        android:id="@+id/id_info_listview"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/gray"
                        android:listSelector="@color/white"
                        android:dividerHeight="0.5dp"
                        android:divider="@color/line_gray">
                    </com.taihe.eggshell.widget.MyListView>
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </com.taihe.eggshell.widget.MyScrollView>

    <LinearLayout
        android:id="@+id/id_lin_info_chat"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:visibility="gone"
        android:padding="5dp"
        android:orientation="horizontal">
        <EditText
            android:id="@+id/id_edit_chat"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="left|center"
            android:imeOptions="actionDone"
            android:background="@color/white"
            android:focusable="true"
            android:textColorHint="@color/gray"
            android:hint="评论:"/>
        <TextView
            android:id="@+id/id_send"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:layout_marginLeft="5dp"
            android:gravity="center"
            android:text="发送"
            android:textSize="@dimen/font_size_32"
            android:textColor="@color/white"
            android:background="@drawable/next_step_background"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/id_lin_info_button"
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_height="40dp">
        <LinearLayout
            android:id="@+id/id_lin_info_sc"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@color/next_step_color"
            android:gravity="center"
            android:layout_weight="1">
            <ImageView
                android:id="@+id/id_img_info_sc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/scstark"/>
            <TextView
                android:id="@+id/id_txt_info_sc"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                android:text="收藏"
                android:gravity="center"
                android:textSize="16sp"
                android:textColor="@color/white"/>
        </LinearLayout>
        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="@color/green_lite"/>
        <LinearLayout
            android:id="@+id/id_lin_info_pl"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@color/next_step_color"
            android:gravity="center"
            android:layout_weight="1">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/scpinglun"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                android:text="评论"
                android:textSize="16sp"
                android:textColor="@color/white"/>
        </LinearLayout>
        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="@color/green_lite"/>
        <LinearLayout
            android:id="@+id/id_lin_info_bm"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@color/next_step_color"
            android:gravity="center"
            android:layout_weight="1">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/scbaoming"/>
            <TextView
                android:id="@+id/id_txt_info_bm"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                android:text="我要报名"
                android:textSize="16sp"
                android:textColor="@color/white"/>
        </LinearLayout>

    </LinearLayout>
</RelativeLayout>