<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/background_gray"
    android:orientation="vertical">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="10dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingBottom="10dp"
            android:gravity="center|bottom">



            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="100dp">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/xuankuang"
                    android:layout_marginRight="10dp"
                    android:id="@+id/comresume_img_mb_check"
                    android:layout_alignBottom="@+id/linearLayout3"
                    android:layout_alignParentStart="true" />
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/linearLayout2"
                    android:layout_toEndOf="@+id/comresume_img_mb_check"
                    android:id="@+id/linearLayout3">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="李晓明"
                        android:textColor="@color/font_color_black"
                        android:textSize="16sp"
                        android:singleLine="true"
                        android:maxEms="4"
                        android:id="@+id/comresume_txt_mb_uname" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/dark_gray"
                        android:textSize="13sp"
                        android:singleLine="true"
                        android:maxEms="6"
                        android:id="@+id/comresume_txt_mb_job"
                        android:text="阿斯顿发送到发送到" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center|bottom"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/com_date"
                        android:layout_marginRight="5dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:textSize="14sp"
                        android:textColor="@color/dark_gray"
                        android:text="一年以内"
                        android:id="@+id/comresume_txt_mb_jobdate" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:layout_weight="1"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true"
                    android:id="@+id/linearLayout2">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="New Text"
                        android:textSize="13sp"
                        android:textColor="@color/dark_gray"
                        android:id="@+id/comresume_txt_mb_date" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/font_color_red"
                        android:textSize="13sp"
                        android:text="New Text"
                        android:id="@+id/comresume_txt_mb_money" />
                </LinearLayout>
            </RelativeLayout>

        </LinearLayout>

        <View android:layout_marginLeft="10dp" style="@style/line_fill"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:paddingRight="20dp"
            android:paddingBottom="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="不合适"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:id="@+id/comresume_txt_mb_nouse"
                android:layout_gravity="right"
                android:background="@drawable/border_bg_white"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="待通知"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:id="@+id/comresume_txt_mb_notice"
                android:layout_marginEnd="10dp"
                android:background="@drawable/border_bg_white"
                android:layout_alignTop="@+id/comresume_txt_mb_nouse"
                android:layout_toStartOf="@+id/comresume_txt_mb_nouse" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="已查看"
                android:id="@+id/comresume_txt_mb_look"
                android:layout_alignTop="@+id/comresume_txt_mb_notice"
                android:layout_toStartOf="@+id/comresume_txt_mb_notice"
                android:background="@drawable/border_bg_white"
                android:layout_marginEnd="10dp" />
        </RelativeLayout>
        <View android:layout_height="10dp" style="@style/line_fill"/>
    </LinearLayout>

</LinearLayout>