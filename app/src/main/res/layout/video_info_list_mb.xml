<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/relat_vinfo_list_mb"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_below="@+id/lin_video_play_tag1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <RelativeLayout
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:gravity="center"
            android:background="@drawable/xuhaokuang"
            android:layout_marginLeft="15dp"
            android:layout_marginStart="15dp"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:id="@+id/relativeLayout">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:textColor="@color/font_color_red"
                android:id="@+id/txt_vinfo_mb_num" />
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txt_vinfo_mb_name"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/relativeLayout"
            android:textColor="@color/font_color_black"
            android:layout_marginLeft="25dp"
            android:layout_marginStart="25dp"
            android:singleLine="true"
            android:layout_toLeftOf="@+id/txt_vinfo_mb_time"
            android:layout_toStartOf="@+id/txt_vinfo_mb_time" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txt_vinfo_mb_time"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:textColor="@color/font_color_gray"
            android:layout_marginRight="13dp"
            android:layout_marginEnd="13dp"
            android:singleLine="true"
             />
    </RelativeLayout>

</LinearLayout>
