<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_gray"
    android:orientation="vertical">

    <include layout="@layout/include_title_bar" />
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/line_gray"/>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:background="@color/bg_gray"
        android:gravity="left|center"
        android:layout_height="40dp">

        <LinearLayout
            android:id="@+id/lin_com_top1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="5dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_com_top1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="未查看"
                android:textColor="@color/red" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lin_com_top2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="5dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_com_top2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="已查看"
                android:textColor="@color/font_color_black" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/lin_com_top3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="5dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_com_top3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="待通知"
                android:textColor="@color/font_color_black" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lin_com_top4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="5dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_com_top4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="不合适"
                android:textColor="@color/font_color_black" />
        </LinearLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/line_gray"/>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_above="@+id/relativeLayout3">

            <com.handmark.pulltorefresh.library.PullToRefreshGridView
                xmlns:ptr="http://schemas.android.com/apk/res-auto"
                android:id="@+id/id_com_listview"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:background="@color/background_gray"
                android:divider="@color/gray"
                android:numColumns="1"
                android:fadingEdge="none"
                android:fastScrollEnabled="false"
                android:footerDividersEnabled="false"
                android:headerDividersEnabled="true"
                android:listSelector="@color/white"
                android:smoothScrollbar="true"
                ptr:ptrAnimationStyle="flip" >
            </com.handmark.pulltorefresh.library.PullToRefreshGridView>
        </LinearLayout>

        <RelativeLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:padding="10dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:id="@+id/relativeLayout3">

            <LinearLayout
                android:id="@+id/com_lin_allcheck"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentStart="true">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/xuankuang"
                    android:id="@+id/com_img_allcheck"
                    android:layout_marginStart="20dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentStart="true" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="全选"
                    android:id="@+id/com_txt_tag"
                    android:textColor="@color/dark_gray"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@+id/com_img_allcheck"
                    android:layout_marginStart="10dp" />
            </LinearLayout>

            <TextView
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="删除"
                android:background="@drawable/border_roundedcorners_red"
                android:textColor="@color/white"
                android:gravity="center"
                android:id="@+id/com_txt_del"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true" />

        </RelativeLayout>
    </RelativeLayout>

</LinearLayout>