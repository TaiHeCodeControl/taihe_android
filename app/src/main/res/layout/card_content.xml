<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/id_linear"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="480dp"
    android:layout_margin="15dp"
    android:background="@color/background_gray">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:background="@drawable/border_roundedcorners_gray"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/id_company_logo"
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:layout_marginTop="25dp"
            android:scaleType="centerCrop"
            android:src="@drawable/tu"/>

        <TextView
            android:id="@+id/id_job_name"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="12dp"
            android:text="大数据分析"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:ellipsize="end"
            android:singleLine="true"/>

        <TextView
            android:id="@+id/id_company_name"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="8dp"
            android:text="苏宁消费金融有限公司"
            android:textSize="16sp"
            android:textColor="@color/index_tab_color"
            android:ellipsize="end"
            android:singleLine="true"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_margin="10dp"
            android:background="@color/line_gray"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/id_salary"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="6-8K"
                android:textSize="14sp"
                android:textColor="@color/origin"
                android:drawableTop="@drawable/money_icon"
                android:drawablePadding="10dp"/>

            <View
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:background="@color/line_gray"/>

            <TextView
                android:id="@+id/id_experince"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="三年以上"
                android:textSize="16sp"
                android:textColor="@color/index_tab_color"
                android:drawableTop="@drawable/experience_icon"
                android:drawablePadding="10dp"/>

            <View
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:background="@color/line_gray"/>

            <TextView
                android:id="@+id/id_edu_level"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="本科"
                android:textSize="16sp"
                android:textColor="@color/index_tab_color"
                android:drawableTop="@drawable/edu_level"
                android:drawablePadding="10dp"/>

            <View
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:background="@color/line_gray"/>

            <TextView
                android:id="@+id/id_address_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="北京"
                android:textSize="16sp"
                android:textColor="@color/index_tab_color"
                android:drawableTop="@drawable/location_icon"
                android:drawablePadding="10dp"/>

            </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_margin="10dp"
            android:background="@color/line_gray"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:padding="6dp">

            <TextView
                android:id="@+id/id_job_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:layout_alignParentLeft="true"
                android:text="性质:  全职"
                android:textColor="@color/index_tab_color"
                android:textSize="15sp"
                android:background="@color/card_text_bg"/>

            <TextView
                android:id="@+id/id_job_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:padding="5dp"
                android:text="招聘: 5-10人"
                android:textColor="@color/index_tab_color"
                android:textSize="15sp"
                android:background="@color/card_text_bg"/>

            <TextView
                android:id="@+id/id_sex"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:padding="5dp"
                android:text="性别:  男  "
                android:textColor="@color/index_tab_color"
                android:textSize="15sp"
                android:background="@color/card_text_bg"/>

            </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:padding="6dp">

            <TextView
                android:id="@+id/id_is_marriy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:layout_alignParentLeft="true"
                android:text="婚姻: 未婚"
                android:textColor="@color/index_tab_color"
                android:textSize="15sp"
                android:background="@color/card_text_bg"/>

            <TextView
                android:id="@+id/id_arrive"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:layout_centerInParent="true"
                android:text="到岗:  一周内"
                android:textColor="@color/index_tab_color"
                android:textSize="15sp"
                android:background="@color/card_text_bg"/>

        </RelativeLayout>

        <TextView
            android:id="@+id/id_publish_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:text="发布: 2015-07-09"
            android:textSize="16sp"
            android:textColor="@color/font_hui_se"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="15dp"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/id_oval"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/oval_background"/>

            <ImageView
                android:id="@+id/id_oval2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_gravity="center"
                android:src="@drawable/oval_background"/>

            <ImageView
                android:id="@+id/id_oval3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/oval_background"/>

            </LinearLayout>

        </LinearLayout>

    <LinearLayout
        android:id="@+id/id_transprent_card"
        android:alpha="0"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:background="@color/white"
        android:visibility="visible">

        <TextView
            android:id="@+id/item_swipe_right_indicator"
            android:alpha="0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:drawableTop="@drawable/left_unlike"
            android:drawablePadding="8dp"
            android:text="不感兴趣"
            android:textColor="@color/font_color_red"
            android:textSize="20dp"
            android:background="@color/white"
            android:visibility="visible"/>

        <TextView
            android:id="@+id/item_swipe_left_indicator"
            android:alpha="0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:drawableTop="@drawable/right_like"
            android:drawablePadding="8dp"
            android:text="感兴趣"
            android:textColor="@color/font_text_like"
            android:textSize="20dp"
            android:background="@color/white"
            android:visibility="visible"/>
        </LinearLayout>

</RelativeLayout>