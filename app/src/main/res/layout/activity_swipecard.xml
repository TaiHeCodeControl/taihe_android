<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background_gray">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background_gray"
        android:visibility="visible">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/title_height"
            android:background="@color/include_title_color">

            <RelativeLayout
                android:id="@+id/iv_findjob_back"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="10dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/fanhui" />

            </RelativeLayout>

            <TextView
                android:id="@+id/tv_findjob_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginTop="10dp"
                android:text="找工作"
                android:textColor="@color/white"
                android:textSize="18dp" />

            <ImageView
                android:id="@+id/iv_findjob_search"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"
                android:layout_toLeftOf="@+id/iv_findjob_filter"
                android:src="@drawable/sousuo001" />

            <ImageView
                android:id="@+id/iv_findjob_filter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:src="@drawable/liebiao" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/line_gray"/>

        <com.taihe.eggshell.widget.swipecard.SwipeFlingAdapterView
            android:id="@+id/frame"
            android:layout_width="match_parent"
            android:layout_height="520dp"
            app:rotation_degrees="15"
            tools:context="com.taihe.eggshell.job.activity.SwipecardsActivity"
            android:background="@drawable/card_stack_background"/>

    </LinearLayout>

        <FrameLayout
            android:id="@+id/id_monogo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/mengceng"
            android:visibility="visible">
        </FrameLayout>


    <ImageView
        android:id="@+id/id_no_data"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerInParent="true"
        android:src="@drawable/no_data"
        android:visibility="gone"/>

</RelativeLayout>

