    <!--android:layout_height="60dp"-->
    <!--style="@style/CustomCheckboxBlue"-->
    <!--android:layout_below="@+id/tv_isapplyjob_title"-->
    <!--android:checked="true"-->
    <!--android:layout_marginLeft="10dp"-->
    <!--android:visibility="invisible"/>-->

    <TextView
        android:id="@+id/tv_isapplyjob_resumename"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_isapplyjob_title"
        android:lineSpacingExtra="8dp"
        android:padding="30dp"
        android:text="个人简历20150730个人简历20150730个人简历20150730个人简历20150730个人简历20150730"
        android:textColor="@color/font_color_black"
        android:textSize="@dimen/font_size_26" />


    <Button
        android:id="@+id/btn_isapplyjob_ok"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_below="@+id/tv_isapplyjob_resumename"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="@drawable/lanniu2"
        android:text="确定"
        android:textColor="@color/white"
        android:textSize="@dimen/font_size_26" />
</RelativeLayout>