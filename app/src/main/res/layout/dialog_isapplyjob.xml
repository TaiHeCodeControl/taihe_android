<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/shenqing"
    android:paddingBottom="15dp">

    <LinearLayout
        android:id="@+id/ll_isapplyjob_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp">

        <TextView
            android:id="@+id/tv_isapplyjob_title"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical"
            android:text="申请职位"
            android:textColor="@color/white"
            android:textSize="@dimen/font_size_26" />


        <ImageView
            android:id="@+id/iv_isapplyjob_cancel"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:src="@drawable/cha" />
    </LinearLayout>


    <!--<CheckBox-->
    <!--android:id="@+id/cb_isapplyjob_xuanze"-->
